// views/academy.ejs
<%- include('partials/head', { title: 'SharedStars Academy' }) %>
<%- include('partials/header') %>

<main class="bg-gray-900 text-white">
    <!-- STELLA Introduction Hero -->
    <section class="hero-section py-16">
        <div class="container mx-auto px-4">
            <div class="flex flex-col md:flex-row items-center gap-8">
                <div class="w-full md:w-1/2">
                    <h1 class="text-4xl md:text-5xl font-bold mb-4">
                        Train for Space with STELLA AI
                    </h1>
                    <p class="text-xl text-gray-300 mb-6">
                        The world's most advanced AI-powered space training program
                    </p>
                    <div class="space-y-4">
                        <div class="flex items-center gap-2">
                            <span class="text-green-400">✓</span>
                            <span>Personalized AI coaching 24/7</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="text-green-400">✓</span>
                            <span>Real-time progress tracking</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="text-green-400">✓</span>
                            <span>Industry-standard certifications</span>
                        </div>
                    </div>
                    <div class="mt-8 space-x-4">
                        <a href="/apply" class="btn btn-primary">
                            Start Training Now
                        </a>
                        <% if (spotsRemaining) { %>
                            <span class="text-sm text-blue-400">
                                Only <%= spotsRemaining %> spots remaining
                            </span>
                        <% } %>
                    </div>
                </div>
                
                <!-- STELLA AI Visual -->
                <div class="w-full md:w-1/2">
                    <div class="relative">
                        <div id="stella-avatar" class="bg-blue-900/30 p-8 rounded-xl">
                            <!-- Add your STELLA AI avatar/animation here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Training Phases -->
    <section class="training-phases py-16 bg-gray-800/50">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold mb-8 text-center">Your Path to Space</h2>
            <div class="grid md:grid-cols-5 gap-4">
                <% trainingPhases.forEach(function(phase) { %>
                    <div class="phase-card bg-gray-800 p-6 rounded-lg">
                        <div class="flex items-center gap-3 mb-4">
                            <i class="fas fa-<%= phase.icon %> text-blue-400"></i>
                            <h3 class="text-xl font-bold"><%= phase.title %></h3>
                        </div>
                        <p class="text-gray-300 text-sm"><%= phase.description %></p>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Subscription Tiers -->
    <section class="subscription-tiers py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold mb-8 text-center">Choose Your Training Path</h2>
            <div class="grid md:grid-cols-3 gap-8">
                <% subscriptionTiers.forEach(function(tier) { %>
                    <div class="tier-card hover:scale-105 transition-transform bg-gray-800 rounded-xl p-6">
                        <div class="flex justify-between items-start mb-4">
                            <h3 class="text-2xl font-bold"><%= tier.name %></h3>
                            <span class="bg-blue-500/20 px-3 py-1 rounded-full">
                                $<%= tier.price %>/mo
                            </span>
                        </div>
                        <ul class="space-y-3 mb-6">
                            <% tier.features.forEach(function(feature) { %>
                                <li class="flex items-center gap-2">
                                    <span class="text-green-400">✓</span>
                                    <span class="text-sm"><%= feature %></span>
                                </li>
                            <% }); %>
                        </ul>
                        <div class="mt-6 pt-4 border-t border-gray-700">
                            <p class="text-sm text-gray-300">Time to Space Ready:</p>
                            <p class="text-lg font-bold text-blue-400"><%= tier.timeToSpace %> months</p>
                        </div>
                        <a href="/subscribe/<%= tier.name.toLowerCase() %>" 
                           class="btn btn-outline w-full mt-4">
                            Select <%= tier.name %>
                        </a>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Available Modules -->
    <section class="modules-section py-16 bg-gray-800/50">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold mb-8 text-center">Training Modules</h2>
            <div class="grid md:grid-cols-3 gap-6">
                <% modules.forEach(function(module) { %>
                    <div class="module-card bg-gray-800 p-6 rounded-lg">
                        <h3 class="text-xl font-bold mb-2"><%= module.name %></h3>
                        <p class="text-gray-300 mb-4"><%= module.description %></p>
                        <span class="bg-blue-500/20 px-3 py-1 rounded-full text-sm">
                            <%= module.category %>
                        </span>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>
</main>

<%- include('partials/footer') %>

/* Add to your existing CSS file */
.btn {
    @apply px-6 py-2 rounded-lg transition-colors duration-200;
}

.btn-primary {
    @apply bg-blue-600 hover:bg-blue-700 text-white;
}

.btn-outline {
    @apply border border-gray-600 hover:bg-gray-700 text-white;
}