<%- include('partials/head', { title: title }) %>
<%- include('partials/header') %>

<section class="ai-coaching-section py-8 bg-gray-900 text-white">
  <div class="container mx-auto px-4">
    <h1 class="text-4xl font-bold mb-4">AI-Guided Coaching</h1>
    <% if (guidance) { %>
      <p class="mb-6"><%= guidance.message %></p>
      <div class="guidance-tips space-y-4">
        <% guidance.tips.forEach(function(tip) { %>
          <div class="tip p-4 bg-gray-800 rounded shadow">
            <h3 class="text-2xl font-semibold"><%= tip.title %></h3>
            <p><%= tip.description %></p>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p>No guidance available right now.</p>
    <% } %>
  </div>
</section>

<%- include('partials/footer') %>
