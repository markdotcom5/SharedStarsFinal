<!-- views/training/phases/phase1.ejs -->
<%- include('../../partials/head') %>

<div class="min-h-screen bg-gray-900 text-white">
    <%- include('../components/stella-interface') %>
    
    <main class="container mx-auto px-4 py-8">
        <%- include('../components/phase-nav') %>

        <div class="grid md:grid-cols-3 gap-8">
            <!-- Training Content -->
            <div class="md:col-span-2 space-y-8">
                <div class="bg-gray-800 rounded-xl p-6">
                    <h1 class="text-3xl font-bold mb-4">Home-Based Training</h1>
                    <p class="text-gray-400 mb-6">
                        Master the fundamentals of space training from home with STELLA's guidance.
                    </p>

                    <!-- Available Modules -->
                    <div class="grid gap-4">
                        <% modules.forEach(function(module) { %>
                            <div class="bg-gray-700/50 rounded-lg p-4">
                                <div class="flex justify-between items-start mb-2">
                                    <h3 class="text-xl font-bold"><%= module.name %></h3>
                                    <span class="bg-blue-500/20 px-2 py-1 rounded text-sm">
                                        <%= module.type %>
                                    </span>
                                </div>
                                <p class="text-gray-400 text-sm mb-4"><%= module.description %></p>
                                <div class="flex justify-between items-center">
                                    <div class="text-sm text-gray-400">
                                        <% if (module.duration) { %>
                                            <%= module.duration.hoursPerWeek %> hrs/week
                                        <% } %>
                                    </div>
                                    <button class="bg-blue-500/20 hover:bg-blue-500/30 px-4 py-2 rounded-lg text-sm">
                                        Start Module
                                    </button>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <!-- Progress & Stats -->
            <div class="space-y-8">
                <%- include('../components/progress-tracker') %>

                <!-- STELLA's Recommendations -->
                <div class="bg-gray-800 rounded-xl p-6">
                    <h2 class="text-xl font-bold mb-4">STELLA's Recommendations</h2>
                    <div class="space-y-4">
                        <% recommendations.forEach(function(rec) { %>
                            <div class="bg-gray-700/50 rounded-lg p-4">
                                <h4 class="font-medium mb-2"><%= rec.title %></h4>
                                <p class="text-sm text-gray-400"><%= rec.description %></p>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

