<!-- views/training/index.ejs -->
<%- include('../partials/head') %>

<div class="min-h-screen bg-gray-900 text-white">
    <%- include('./components/stella-interface') %>
    
    <main class="container mx-auto px-4 py-8">
        <!-- Welcome Section -->
        <div class="bg-gray-800 rounded-xl p-8 mb-8">
            <div class="flex items-start justify-between">
                <div>
                    <h1 class="text-4xl font-bold mb-4">Training Hub</h1>
                    <p class="text-gray-400">
                        Welcome back, <%= user.name %>. STELLA has prepared your training schedule.
                    </p>
                </div>
                <div class="text-right">
                    <div class="text-sm text-gray-400">Current Phase</div>
                    <div class="text-3xl font-bold text-blue-400">Phase <%= currentPhase %></div>
                </div>
            </div>
        </div>

        <%- include('./components/phase-nav') %>

        <!-- Available Training Modules -->
        <div class="grid md:grid-cols-3 gap-8 mb-8">
            <% availableModules.forEach(function(module) { %>
                <div class="bg-gray-800 rounded-xl p-6 hover:bg-gray-700/50 transition-colors">
                    <div class="flex justify-between items-start mb-4">
                        <h3 class="text-xl font-bold"><%= module.name %></h3>
                        <span class="bg-blue-500/20 px-2 py-1 rounded text-sm">
                            <%= module.type %>
                        </span>
                    </div>
                    <p class="text-gray-400 mb-4"><%= module.description %></p>
                    <div class="flex justify-between items-center">
                        <div class="text-sm text-gray-400">
                            <%= module.duration.hoursPerWeek %> hrs/week
                        </div>
                        <button class="bg-blue-500/20 hover:bg-blue-500/30 px-4 py-2 rounded-lg text-sm">
                            Start Training
                        </button>
                    </div>
                </div>
            <% }); %>
        </div>

        <!-- Training Progress Overview -->
        <div class="grid md:grid-cols-2 gap-8">
            <%- include('./components/progress-tracker') %>
            
            <!-- STELLA's Recommendations -->
            <div class="bg-gray-800 rounded-xl p-6">
                <h2 class="text-xl font-bold mb-4">STELLA's Recommendations</h2>
                <div class="space-y-4">
                    <% stellaRecommendations.forEach(function(rec) { %>
                        <div class="bg-gray-700/50 rounded-lg p-4">
                            <h4 class="font-medium mb-2"><%= rec.title %></h4>
                            <p class="text-sm text-gray-400"><%= rec.description %></p>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer') %>