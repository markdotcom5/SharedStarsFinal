<!-- views/training/physical.ejs -->
<%- include('../partials/head', { title: 'Physical Training Module' }) %>
<%- include('../partials/header') %>

<section class="training-module py-8 bg-gray-900 text-white">
  <div class="container mx-auto px-4">
    <!-- STELLA AI Coach Integration -->
    <div id="ai-coach" class="bg-blue-900/30 p-4 rounded-lg mb-6">
      <div class="flex items-center gap-4">
        <div class="ai-status-indicator"></div>
        <h3 class="text-blue-400 font-bold">STELLA AI Coach</h3>
        <!-- Physical Training Specific AI Guidance -->
        <div id="physical-ai-feedback" class="mt-2">
          <!-- Real-time form monitoring feedback -->
          <!-- Zero-G adaptation guidance -->
        </div>
      </div>
    </div>

    <!-- Physical Training Core Content -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-4">Physical Training</h1>
      
      <!-- Zero-G Training Section -->
      <div class="bg-gray-800 p-6 rounded-lg mb-6">
        <h2 class="text-2xl font-bold mb-4">Zero-G Fundamentals</h2>
        <div class="grid grid-cols-2 gap-6">
          <!-- Live Form Monitoring -->
          <div class="bg-gray-700 p-4 rounded-lg">
            <h3 class="text-xl mb-3">Form Analysis</h3>
            <div id="form-monitor"></div>
          </div>
          
          <!-- Biometric Data -->
          <div class="bg-gray-700 p-4 rounded-lg">
            <h3 class="text-xl mb-3">Vital Signs</h3>
            <div id="biometric-display" class="grid grid-cols-2 gap-4">
              <!-- Real-time vitals -->
            </div>
          </div>
        </div>
      </div>

      <!-- Exercise Sets -->
      <div id="exercise-queue" class="space-y-4">
        <!-- Dynamic exercise content -->
      </div>
    </div>

    <!-- Performance Metrics -->
    <div class="grid grid-cols-3 gap-6 mb-8">
      <div class="bg-gray-800 p-4 rounded-lg">
        <h3 class="text-xl mb-3">Heart Rate Zone</h3>
        <div id="heart-rate-chart"></div>
      </div>
      <div class="bg-gray-800 p-4 rounded-lg">
        <h3 class="text-xl mb-3">Movement Precision</h3>
        <div id="precision-meter"></div>
      </div>
      <div class="bg-gray-800 p-4 rounded-lg">
        <h3 class="text-xl mb-3">Recovery Rate</h3>
        <div id="recovery-tracker"></div>
      </div>
    </div>

    <!-- Progress Assessment -->
    <div class="bg-gray-800 p-6 rounded-lg">
      <h2 class="text-2xl font-bold mb-4">Training Progress</h2>
      <div class="grid grid-cols-2 gap-6">
        <div>
          <h3 class="text-xl mb-3">Certification Progress</h3>
          <div id="certification-tracker"></div>
        </div>
        <div>
          <h3 class="text-xl mb-3">Next Objectives</h3>
          <div id="next-objectives"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>

<!-- Physical Training Specific Scripts -->
<script src="/js/modules/training/physical/index.js" type="module"></script>
<script type="module">
  // Initialize Physical Training Systems
  const aiHandler = new AIHandler();
  const physicalTraining = new TrainingHandler(userId);
  const biometricMonitor = new BiometricMonitor();

  document.addEventListener('DOMContentLoaded', async () => {
    await aiHandler.initialize(userId, 'physical_training');
    await physicalTraining.startSession();
    biometricMonitor.startTracking();
  });
</script>